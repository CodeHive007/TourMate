<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/B_restaurants"
        android:onClick="onClick"
        android:text="Search" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_marginTop="63dp"
        tools:context="com.example.priyanka.mapsdemo.MapsActivity" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="173dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_signup_02"
        android:textColor="#fff"
        android:onClick="onClick"
        android:text="Hospitals" />

    <Button
        android:id="@+id/B_cafe"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:textColor="#fff"
        android:background="@drawable/btn_signup_02"
        android:onClick="onClick"
        android:text="Cafe" />

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/TF_location"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="4dp"
        android:textColor="#fff"
        android:background="@drawable/btn_signup_02"
        android:onClick="onClick"
        android:text="Restautants" />

    <Button
        android:id="@+id/B_atm"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_signup_02"
        android:textColor="#fff"
        android:onClick="onClick"
        android:text="Bank" />


</RelativeLayout>